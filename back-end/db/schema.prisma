generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          String  @id @default(uuid())
  name        String  @unique
  email       String  @unique
  password    String
  role        Role    @default(BASIC)
  writtenQuiz Quiz[]
  userScore   Score[]
}

model Quiz {
  id         String     @id @default(uuid())
  name       String     @unique
  difficulty Difficulty @default(NORMAL)
  author     User       @relation(fields: [authorId], references: [id])
  authorId   String
  Question   Question[]
  isOnline   Boolean    @default(false)
  quizScore  Score[]
}

enum Role {
  BASIC
  ADMIN
}

enum Difficulty {
  SIMPLE
  NORMAL
  DIFFICILE
}

model Score {
  id     String  @id @default(uuid())
  score  Int
  User   User    @relation(fields: [userId], references: [id])
  userId String
  Quiz   Quiz?   @relation(fields: [quizId], references: [id])
  quizId String?
}

model Question {
  id         String   @id @default(uuid())
  question   String
  answer     Answer[]
  quiz       Quiz     @relation(fields: [quizId], references: [id])
  quizId     String
  goodAnswer String
}

model Answer {
  id          String     @id @default(uuid())
  name        String
  flag        String
  continent   Continent  @relation(fields: [continentId], references: [id])
  continentId Int
  Question    Question[]
}

model Continent {
  id     Int      @id @default(autoincrement())
  name   String
  Answer Answer[]
}
